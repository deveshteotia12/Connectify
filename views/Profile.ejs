<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="/css/index.css" rel="stylesheet">
</head>
<body>
  <div class="Navbar">
    <div class="logoCarry">
       <div class="circle2"></div>
       <h2><span style="color: white;">C</span>onnectify</h2>
    </div>
    <ul>

        
        <li><a href="/data">Home</a></li>
        <li><a href="/post">Post</a></li>
        <li><a href="/dashboard">Dashboard</a></li>
        <li><a href="/logout">Logout</a></li>
    </ul>
  </div>
    <div class="dashboardContainer">
        <div class="dashboardIntro">
                <div class="dashboardName">
                    <h3><%=Name%></h3>
                    <p><%=specification%></p>
                    <p><%=place%></p>
                </div>
            
            <div class="dashboardImage" style="background-image: url('/uploads/<%=ID%>.png');">
            </div>
       </div>
       <div class="dashboardRender">
        <div class="postContainer">
          <h1>Posts: </h1>
            <div class="posts">
              <%if(posts.length>0){%>
               <%for(var i=0;i<posts.length;i++){%>
                  <div class="subpost">
                       <h3><%=posts[i].Title%></h3>
                       <p><%=posts[i].Information%></p>
                       
                      <button  onclick="myfunc('<%=posts[i].uniqueID%>')" type="submit">Respond</button>
                  <div style="display: none;" class="formResponse" id="<%=posts[i].uniqueID%>">
                    <form action="/data/request" method="POST">
                      <input type="text" name="email" placeholder="Email Address">
                      <input type="text" name="phone" placeholder="Phone Number">
                      <textarea type="text" name="Information" placeholder="Additional Information" ></textarea>
                      <input style="display: none" name="questionID" value="<%=posts[i].uniqueID%>">
                      <button name="requestTo" value="<%=posts[i].ID%>" type="submit">Send</button>
                    </form>
                  </div>
                  </div>
                  
                <%}%>
                <%}else{%>
                    <p>No Posts to Show</p>
                <%}%>
            </div>
           </div>
    </div>
    
    <script>
        function myfunc(parameter)
        {
          console.log(parameter)
           var x=document.getElementById(parameter);
           if(x.style.display==="none")
           {
             x.style.display="block"
           }else{
             x.style.display="none"
           }
        }
      </script>
</body>
</html>